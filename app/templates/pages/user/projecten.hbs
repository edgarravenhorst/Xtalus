<section id="demands">

    {{#each demand in demands}}

    <section class="demand" {{action "showDetails"}}>
        <img src="assets/images/plant.jpg"/>
        <section class="description">
            <h4>{{demand.demandDescription}}</h4>
            <!-- <span>{{demand.demandOrSupplyProfileStartDate}} - {{demand.demandOrSupplyProfileEndDate}}</span> -->
            <!-- <p>{{demand.demandSummary}}</p>-->
            <p>{{demand.demandOwner.title}}</p>
        </section>
    </section>

    {{/each}}

</section>


<section id="add-project-popup">

    <section>

         <header>
            <h2>Nieuw project</h2>
        </header>
        <form method="post" {{action "addProject" on="submit"}}>
            {{input value=title type="text" placeholder="Titel"}}<br>
            {{textarea value=description placeholder="Description"}}<br>
            <button type="submit" class="btn">Project toevoegen</button>
        </form>

    </section>

</section>
