<section id="page" class='login'>

    <header>
        <h1>Xtalus</h1>
        <h3>Het zakelijke matching platform voor studenten, zzp'ers en professionals</h3>
    </header>

    <section>

        <img src="assets/images/login-header-bg.jpg"/>
        <p class="message">{{message}}</p>
        <form method="post" {{action "login" on="submit"}}>
            {{input value=username type="text" placeholder="gebruikersnaam"}}
            {{input value=password type="password" placeholder="wachtwoord"}}
            <button type="submit" class="btn">Login</button>
        </form>

    </section>

</section>
