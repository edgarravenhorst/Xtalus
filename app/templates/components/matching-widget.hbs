
{{#if isPostal}}<label {{action "toggleStatus"}}>Postcode</label>{{/if}}
{{#if isRole}}<label {{action "toggleStatus"}}>Rol</label>{{/if}}
{{#if isPassion}}<label {{action "toggleStatus"}}>Passie</label>{{/if}}
{{#if isBranch}}<label {{action "toggleStatus"}}>Branches</label>{{/if}}
{{#if isQuality}}<label {{action "toggleStatus"}}>Kwaliteiten</label>{{/if}}
{{#if isWeekdays}}<label {{action "toggleStatus"}}>Beschikbare dagen</label>{{/if}}
{{#if isHourlyRate}}<label {{action "toggleStatus"}}>Uurloon</label>{{/if}}
{{#if isAge}}<label {{action "toggleStatus"}}>Leeftijd</label>{{/if}}
{{#if isTimePeriod}}<label {{action "toggleStatus"}}>Periode</label>{{/if}}
{{#if isEducation}}<label {{action "toggleStatus"}}>Opleiding</label>{{/if}}

<div class="inner">

    {{#if data.displayValue}}
    <p>{{data.displayValue}}</p>
    {{/if}}

    <form>
    {{#if isPostal}}
        {{input type=text value=params.postcode class="cols-2"}}
    {{/if}}

    {{#if isPassion}}
        {{textarea value=params.value  class="cols-2"}}
    {{/if}}

    {{#if isDate}}
        {{date-picker value=params.date date=mydate valueFormat='YYYY-MM-DD'}}
    {{/if}}

    {{#if isTimePeriod}}
		Start:
        {{date-picker value=data.startDate date=mydate valueFormat='YYYY-MM-DD'}}
		Eind:
        {{date-picker value=data.endDate date=mydate valueFormat='YYYY-MM-DD'}}
    {{/if}}

    {{#if isHourlyRate}}
        {{input type="number" min="1" max="100" step="1" value=params.hourlyRate}}
    {{/if}}

    {{#if isAge}}
        {{input type="number" min="1" max="100" step="1" value=params.age}}
    {{/if}}

    {{#if isEducation}}
        {{view Ember.Select
         contentBinding="App.peopleController"
         selectionBinding="App.selectedPersonController.person"
         optionLabelPath="content.fullName"
         optionValuePath="content.id"
         prompt="Pick a person:"}}
    {{/if}}

    {{#if isBranch}}
		<ul class="tags">
			<li>Tag 1 <i class="fa fa-trash-o"></i></li>
			<li>Tag 2 <i class="fa fa-trash-o"></i></li>
		</ul>

        {{input type=type value=params.postcode class="cols-2"}}
		<button {{action "addTag" data=data}}>Toevoegen <i class="fa fa-plus"></i></button>
	{{/if}}

    {{#if isQuality}}
        <ul class="tags">
            <li>Tag 1 <i class="fa fa-trash-o"></i></li>
            <li>Tag 2 <i class="fa fa-trash-o"></i></li>
        </ul>

        {{input type=type value=params.postcode class="cols-2"}}
        <button {{action "addTag" data=data}}>Toevoegen <i class="fa fa-plus"></i></button>
    {{/if}}

    {{#if isRole}}
        {{multiselect-checkboxes options=data.roles labelProperty='name' selection=role_chkbox.values}}
	{{/if}}

    {{#if isNew}}
        <button {{action "saveWidget" data=data}}>Toevoegen <i class="fa fa-plus"></i></button>
    {{/if}}
    </form>
</div>
