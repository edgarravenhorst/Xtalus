<section id='page' class='profile'>

    <header id="sub-bar">

        <img class="profile-image" src="{{ownerProfilePicture}}" width="100" height="100"/>


        <h4>Project: {{ title }}</h4>

        <nav id="sub-nav">
            <ul>
                <li>{{#link-to 'project.index'}}Algemeen{{/link-to}}</li>
                <li>{{#link-to 'project.matching'}}Matches{{/link-to}}</li>
            </ul>
        </nav>
    </header>

    <aside id='user-info'>
        <h4>Specialismen</h4>
        <h5>matches 0/{{ matchingProfiles.total }}</h5>

        {{#each profile in matchingProfiles.list}}
        <div style="clear:both;border-bottom:1px solid #ccc; padding: 10px 0;">
            <div class='profilePicture' style="float:left; margin-right:10px; margin-bottom:10px; background-image: url({{ ownerProfilePicture }}); width:35px; height:35px;">     </div>
            <div><strong>{{ profile.name }}</strong><br />geen match</div>
        </div>
        {{/each}}

        <a style="display:block; padding:20px 0;">+ Specialisme toevoegen</a>
    </aside>

    <section id='profile-data'>

        <h3>MatchingProfiel: {{ selectedProfile.title }}</h3>


        <section id='matches' class='list'>

            <h3>{{ selectedProfile.matchesCount }} Matches</h3>
            <table>
                <tr>
                    <th>Naam</th>
                    <th>Branch</th>
                    <th>Rol</th>
                </tr>

                {{#each match in selectedProfile.matches}}
                <tr {{action 'showMatchDetails' connection }}>
                    <td><div class='profilePicture' style="background-image: url({{ connection.profilePicture }}) "></div> {{match.fullname}}</td>
                    <td>{{match.branch}}</td>
                    <td>{{match.roles}}</td>
                </tr>
                {{/each}}
            </table>
        </section>
    </section>

</section>
