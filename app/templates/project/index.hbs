    <aside id='page-left' class='' >
        <h4>{{ model.title }}</h4>
        <h5>{{ model.owner.firstName }}</h5>

        <ul>
            <li><strong>Beschrijving</strong></li>
            <li>{{ model.description }}</li>
        </ul>

        <p><strong>Specialismen</strong></p>
        {{#each profile in model.profiles}}
        <div style="cursor:pointer; clear:both;border-bottom:1px solid #ccc; padding: 10px 0;" {{action "selectMatchingProfile" profile.id}}>
            <div class='profilePicture' style="float:left; margin-right:10px; margin-bottom:10px; background-image: url({{ profile.match.profilePicture }}); width:35px; height:35px;">     </div>
            <div><strong>{{ profile.description }}</strong><br />{{profile.match.fullName}}</div>
        </div>
        {{/each}}
        <ul>
            <li><strong>Start- en einddatum</strong></li>
            <li>{{ model.startDate }} t/m {{ model.endDate }}</li>
        </ul>

		<button {{action "delProject"}}>Verwijder project</button>
    </aside>

    <section id='page-content'>


