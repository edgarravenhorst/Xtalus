<section id='page' class='profile'>

    <header id="sub-bar">

        <img class="profile-image" src="{{ownerProfilePicture}}" width="100" height="100"/>

        <h4>Project: {{ title }}</h4>

        <nav id="sub-nav">
            <ul>
                <li>{{#link-to 'project.index'}}Algemeen{{/link-to}}</li>
                <li>{{#link-to 'project.matching'}}Matches{{/link-to}}</li>
            </ul>
        </nav>
    </header>

    <aside id='user-info'>
        <h4>{{ title }}</h4>
        <h5>{{ ownerName }}</h5>

        <ul>
            <li><strong>Beschrijving</strong></li>
            <li>{{ description }}</li>
        </ul>
        {{#each profile in matchingProfiles}}
        <div style="clear:both;border-bottom:1px solid #ccc; padding: 10px 0;">
            <div class='profilePicture' style="float:left; margin-right:10px; margin-bottom:10px; background-image: url({{ ownerProfilePicture }}); width:35px; height:35px;">     </div>
            <div><strong>{{ profile.name }}</strong><br />geen match</div>
        </div>
        {{/each}}
        <ul>
            <li><strong>Start- en einddatum</strong></li>
            <li>{{ startdate }} t/m {{ enddate }}</li>
        </ul>
    </aside>

    <section id='profile-data'>

        <section id='passion'>
            <h3>Samenvatting</h3>
            <p>{{ summary }}</p>
        </section>

        <section id='qualities'>
            <h3>verhaal</h3>
            <p>{{ story }}</p>
        </section>

    </section>

</section>
