<section id='page-content' >
    <section id='overview' class='list'>
        <h5>{{ model.personalContacts.length }} connecties</h5>
        <table>
            <tr>
                <th>Naam</th>
                <th>Rol</th>
            </tr>

            {{#each connection in model.personalContacts}}
            <tr {{action 'showConnectionDetails' connection }}>
                <td>
                    <div class='profilePicture' style="background-image: url({{ connection.profilePicture }}) "></div>
                    {{ connection.contactName }}
                </td>
                <td>{{connection.contactRoles}}</td>
            </tr>
            {{/each}}
        </table>
    </section>
</section>

<aside id='page-right'>
    <header class='picture' style="background-image: url({{ selectedPerson.profilePicture }}) "></header>
    <h4>{{selectedPerson.fullname}}</h4>
    <h5>{{selectedPerson.roles}}</h5>
    <p>{{selectedPerson.dateOfBirth}}</p>
    <button {{action 'getProfile' selectedPerson.id }}>Bekijk profiel</button>
    <button {{action 'hideConnectionDetails'}}>sluiten</button>
</aside>
