<section id='page' class='projects'>
    <header id="page-header">

        <button {{action "showPopup" 'new-project'}}>Nieuw project</button>

        <h4>Projecten</h4>

        <nav id="submenu">
            <ul>
                <li>{{#link-to 'me.projects'}}Alle{{/link-to}}</li>
				<li>{{#link-to 'me.connections'}}Van mij{{/link-to}}</li>
				<li>{{#link-to 'me.connections'}}Uitgenodigd{{/link-to}}</li>
				<li>{{#link-to 'me.connections'}}Deelnemer{{/link-to}}</li>
            </ul>
        </nav>

    </header>

    <section id="page-content">
        <header id="overview" class="absolute">
            <span class="count">{{ projectCount }} lopende projecten</span>
            <ul class='options'>
                <li><button>1</button></li>
                <li><button>2</button></li>
                <li><button>3</button></li>
            </ul>
        </header>

        <section id="overview" class='tiles'>
            {{#each demand in demands}}

            <section class="demand tile" {{action "showDetails" demand.uniqueItemId }}>
                <img src="assets/images/plant.jpg"/>
                <div class="info">
                    <span class='title'>{{demand.demandDescription}}</span>
                    <span class='owner'>{{demand.demandOwner.title}}</span>
                </div>
            </section>

            {{/each}}
        </section>
    </section>

    <aside id="page-right">
        <header class='picture' style="background-image: url('assets/images/plant.jpg') "></header>
        <h4>{{selectedDemand.demandDescription}}</h4>
        <h5>samenvatting</h5>
        <p>{{selectedDemand.demandSummary}}</p>
        <h5>verhaal</h5>
        <p>{{selectedDemand.demandStory}}</p>

        <button {{action 'hideDetails'}}>Sluiten</button><br><br>
        <button {{action 'getProject' selectedDemand.uniqueItemId }}>Bekijk project</button>

    </aside>

